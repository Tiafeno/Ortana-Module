<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
    <name>Ortana subscription</name>
    <author>Tiafeno Finel</author>
    <version>1.1.0</version>
    <description></description>
    <files>
        <filename>mod_ortana.xml</filename>
        <filename module="mod_ortana">mod_ortana.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <folders>
      <folder>sql</folder>
      <folder>app</folder>
      <folder>app/assets</folder>
      <folder>app/inc</folder>
      <folder>app/lib</folder>
      <folder>tmpl</folder>
    </folders>
    <install>
      <sql>
        <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
      </sql>
    </install>
    <uninstall>
      <sql>
        <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
      </sql>
    </uninstall>
    <config>
      <fields name="params">
        <fieldset name="basic">
          <field name="catId" type="category" extension="com_content" label="Select a category" description="" />
          <field
                name="client"
                type="sql"
                default="1"
                label="Select a client"
                query="SELECT contact AS value, client FROM ortana_clients" />
        </fieldset>
      </fields>
    </config>
</extension>